<?xml version="1.0" encoding="UTF-8"?>
<domain-models xmlns="http://axelor.com/xml/ns/domain-models"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/domain-models http://axelor.com/xml/ns/domain-models/domain-models_5.4.xsd">

  <module name="invoice" package="com.axelor.invoice.db"/>

  <sequence name="invoiceSequence" increment="1" prefix="IN" padding="5"/>

  <entity name="Invoice">
    <string name="seq" sequence="invoiceSequence" namecolumn="true"/>
    <integer name="invoiceStatus" title="Status" selection="invoice-status-select" default="1"/>
    <many-to-one ref="com.axelor.contact.db.Contact" name="contact" title="Contact" initParam="true"/>
    <date name="invoiceDate" title="Invoice date"/>
    <decimal name="totalPrice" title="Total"/>
    <decimal name="inTaxTotalPrice" title="Total (in tax)"/>
    <one-to-many ref="com.axelor.invoice.db.InvoiceLine" name="invoiceLineList" mappedBy="invoice"/>

  <extra-code>
      <![CDATA[

           // INVOICE STATUS
        public static final int STATUS_DRAFT = 1;
        public static final int STATUS_VALIDATED = 2;
      ]]>
    </extra-code>
  </entity>

</domain-models>
