<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">

  <form model="com.axelor.invoice.db.Invoice" title="Invoice" name="invoice-form" id="account-invoice-form" extension="true">
  <extend target="//field[@name='contact']">
    <attribute name="onChange" value="action-invoice-method-set-contact-informations"/>
    <insert position="after">
      <field name="account" required="true"/>
    </insert>
  </extend>
    <extend target="//field[@name='invoiceDate']">
      <attribute name="colSpan" value="6"/>
      <insert position="after">
        <field name="move" colSpan="6"/>
      </insert>
    </extend>
    <extend target="//button[@name='validateBtn']">
      <insert position="after">
        <button name="ventilateBtn" title="Ventilate" onClick="action-invoice-method-create-move-from-invoice" showIf="!move &amp;&amp; invoiceStatus == 2"/>
      </insert>
    </extend>
  </form>

  <action-method name="action-invoice-method-set-contact-informations">
    <call class="com.axelor.account.web.AccountInvoiceController" method="setContactInformations"/>
  </action-method>

  <action-method name="action-invoice-method-create-move-from-invoice">
    <call class="com.axelor.account.web.AccountInvoiceController" method="createMoveFromInvoice"/>
  </action-method>

</object-views>
