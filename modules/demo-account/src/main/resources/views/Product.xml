<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">

  <form name="product-form" id="account-product-form" title="Contact" model="com.axelor.sale.db.Product" extension="true">
    <extend target="//field[@name='name']">
    <attribute name="colSpan" value="4"/>
    </extend>
    <extend target="//field[@name='price']">
    <attribute name="colSpan" value="4"/>
    <insert position="after">
      <field name="account" colSpan="4"/>
    </insert>
    </extend>
  </form>

</object-views>
