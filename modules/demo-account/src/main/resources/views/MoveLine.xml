<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">

  <grid model="com.axelor.account.db.MoveLine" title="Move lines" name="move-line-grid" canNew="false" canEdit="false" canDelete="false">
    <field name="account"/>
    <field name="debitAmount"/>
    <field name="creditAmount"/>
  </grid>

  <grid model="com.axelor.account.db.MoveLine" title="Move lines" name="move-line-full-grid" canNew="false" canEdit="false" canDelete="false" groupBy="move">
    <field name="move"/>
    <field name="account"/>
    <field name="debitAmount"/>
    <field name="creditAmount" aggregate="sum"/>
  </grid>

  <form model="com.axelor.account.db.MoveLine" title="Moves" name="move-line-form" canNew="false" canEdit="false" canDelete="false">
    <panel name="mainPanel">
      <field name="account" colSpan="4"/>
      <field name="debitAmount" colSpan="4"/>
      <field name="creditAmount" colSpan="4"/>
    </panel>
  </form>

</object-views>
