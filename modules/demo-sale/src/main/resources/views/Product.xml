<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">

  <grid name="product-grid" title="Products" model="com.axelor.sale.db.Product">
    <field name="name" />
    <field name="price" />
  </grid>

  <form name="product-form" title="Product" model="com.axelor.sale.db.Product" width="large">
    <panel>
      <field name="image" widget="image" colSpan="12"/>
      <field name="name"/>
      <field name="price"/>
      <field name="description" widget="html" colSpan="12" showTitle="false"/>
    </panel>
  </form>


</object-views>
