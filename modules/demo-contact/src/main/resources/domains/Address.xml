<?xml version="1.0" encoding="UTF-8"?>
<domain-models xmlns="http://axelor.com/xml/ns/domain-models"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/domain-models http://axelor.com/xml/ns/domain-models/domain-models_5.4.xsd">

  <module name="contact" package="com.axelor.contact.db"/>

  <entity name="Address">
    <string name="street" title="Street" required="true" />
    <string name="zip" title="Zip" required="true"/>
    <string name="city" title="City" required="true"/>
    <many-to-one ref="com.axelor.contact.db.Country" name="country" title="Country" required="true"/>
    <string name="fullName" namecolumn="true">
      <![CDATA[
          return String.format("%s %s %s %s", street, zip, city, country.getName());
      ]]>
    </string>
  </entity>

</domain-models>
